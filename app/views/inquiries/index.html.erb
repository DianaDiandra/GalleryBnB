<h2>Your Messages</h2>
<% @inquiries.each do |inquiry| %>
  <div class="card mb-3 p-3 position-relative">
    <strong>From:</strong> <%= inquiry.name %> (<%= inquiry.email %>)<br>
    <strong>Regarding:</strong> <%= inquiry.gallery.artist %><br>
    <p><%= inquiry.message %></p>
    <%= link_to gallery_inquiry_path(inquiry.gallery, inquiry),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this message?" },
                class: "text-danger delete-icon position-absolute",
                style: "top: 10px; right: 10px;" do %>
      <i class="fa-solid fa-trash" style="font-size: 24px; color: grey;"></i>
    <% end %>
<% end %>
