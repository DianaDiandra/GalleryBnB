<section class="artist-showcase-section bg-black py-5 mt-5">
  <div class="container px-4 px-md-5">
    <div class="intro-section text-center text-white mb-5">
      <h1 class="display-5 fw-bold mb-3">Discover Our Artists</h1>
      <p class="lead text-light">
        Explore a diverse collection of creative talentsâ€”from actors and dancers to visual and makeup artists.
        Each profile highlights unique stories, artistic journeys, and featured work. Browse the gallery to get inspired and connect with the vibrant world of contemporary artistry.
      </p>
    </div>

    <div class="bg-white py-5 rounded-4 shadow-sm">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 justify-content-center px-3">
        <% @galleries.each do |gallery| %>
          <div class="col" style="max-width: 300px;">
            <%= link_to gallery_path(gallery), class: "text-decoration-none text-reset" do %>
              <div class="card border-0 h-100 bg-white rounded-4 overflow-hidden shadow-sm hover-effect">
                <% if gallery.image.attached? %>
                  <%= image_tag url_for(gallery.image), class: "card-img-top", alt: gallery.artist, style: "height: 200px; object-fit: cover;" %>
                <% end %>
                <div class="card-body p-3">
                  <h5 class="card-title fw-semibold"><%= gallery.artist %></h5>
                  <p class="card-text text-muted small mb-2"><%= truncate(gallery.description, length: 100) %></p>
                  <small class="text-muted"><%= gallery.date.strftime("%B %d, %Y") if gallery.date %></small>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
