<h1>All Galleries</h1>

<div class="row">
  <% @galleries.each do |gallery| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <% if gallery.image.attached? %>
          <%= image_tag gallery.image.variant(resize_to_limit: [400, 300]), class: "card-img-top", alt: "Artwork by #{gallery.artist}" %>
        <% else %>
          <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 300px;">
            No image available
          </div>
        <% end %>

        <div class="card-body">
          <h5 class="card-title"><%= gallery.artist %></h5>
          <p class="card-text"><%= truncate(gallery.description, length: 150) %></p>
          <p class="card-text"><small class="text-muted"><%= gallery.date&.strftime("%B %d, %Y") %></small></p>
          <%= link_to "View Details", gallery_path(gallery), class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
